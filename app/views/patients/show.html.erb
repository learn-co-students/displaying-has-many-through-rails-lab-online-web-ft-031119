<h1><%=@patient.name%></h1>

<h3>Appointments:</h3>
<ul>
  <% @patient.appointments.each do |appt| %>
  <% formatted_time =  appt.appointment_datetime.strftime('%B %d, %Y at %H:%M')%>
  <li>
    <%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
    <%= formatted_time %>
  </li>
<% end %>

</ul>
